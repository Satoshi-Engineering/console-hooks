{
  "exclude": ["node_modules", "build"],
  "compilerOptions": {
    "lib": ["ES2022"],
    "module": "ES2022",
    "target": "ES2022",
    "moduleDetection": "force",
    "outDir": "build",
    "skipLibCheck": true,
    "strict": true,
    "typeRoots": ["node_modules/@types"],
    "esModuleInterop": true,
  }
}
